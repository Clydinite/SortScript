{
    "checkpointing": { "enabled": true },
    "mcpServers": {
        "context7": {
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp"]
        },
        "github": {
            "httpUrl": "https://api.githubcopilot.com/mcp/",
            "headers": {
                "Authorization": "${GITHUB_PAT}"
            },
            "timeout": 5000
        }
    },

    "preferredEditor": "vscode"
}
